FROM python:3.9-slim

WORKDIR /app

# Copy requirements file
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Expose port
EXPOSE 8002

# Run the service
CMD ["uvicorn", "src.rave_processing.api:api", "--host", "0.0.0.0", "--port", "8002"]